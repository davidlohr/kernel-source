+++ b/drivers/infiniband/sw/rxe/rxe_sysfs.c
@@ -77,6 +77,11 @@ static int rxe_param_set_add(const char *val, const struct kernel_param *kp)
 	struct net_device *ndev = NULL;
 	struct rxe_dev *rxe;
 
+	if (!rxe_initialized) {
